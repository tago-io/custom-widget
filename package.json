{
  "name": "@tago-io/custom-widget",
  "description": "TagoIO Toolkit to build your own widgets",
  "version": "1.0.13",
  "main": "./dist/custom-widget.js",
  "author": "Tago LLC",
  "license": "Apache-2.0",
  "repository": "tago-io/custom-widget",
  "scripts": {
    "build:scripts": "webpack && MINIMIZE=true webpack",
    "build:css": "lessc ./src/css/custom-widget.less ./dist/custom-widget.css",
    "build:cssmin": "cleancss -o ./dist/custom-widget.min.css ./dist/custom-widget.css",
    "build": "npm run build:scripts && npm run build:css && npm run build:cssmin",
    "prepare": "npm run build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "check:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "@vitest/coverage-c8": "0.23.4",
    "c8": "7.12.0",
    "clean-css-cli": "5.6.1",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jsdom": "20.0.0",
    "less": "4.1.3",
    "prettier": "2.7.1",
    "shortid": "2.2.16",
    "ts-loader": "9.4.1",
    "typescript": "4.8.3",
    "vitest": "0.23.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {}
}
